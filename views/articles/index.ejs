    <div class="container" style="margin-top: 80px;">
        <div class="container bootstrap snippets bootdey">
            <section id="news" class="white-bg padding-top-bottom">
                <div class="container bootstrap snippets bootdey">
                    <div class="timeline">
                    
                        <div class="row">
                            <% var month=["JAN","FEB","MAR","APR","MAY","JUN","JULY","AUG","SEPT","OCT","NOV","DEC"] %>
                            <% var i=1; articles.forEach(article => { %>
                            
                                <% if(i==1){%>
                                    <div class="col-sm-6 news-item">
                                    <% i=0;} else {%>
                                        <div class="col-sm-6 news-item right">
                                        <%i=1;}%>
                                    <div class="news-content">
                                    <div class="date">
                                        <p><%= article.createdAt.getDate() %></p>
                                        <small><%= month[article.createdAt.getMonth()] %></small>
                                    </div>
                                    <h2 class="news-title"><%= article.title %></h2>
                                    <div class="news-media">
                                        <a class="colorbox cboxElement" href="#">
                                           
                                        </a>
                                    </div>
                                    <p><%= article.description %></p>
                                    <a  href="#"></a>-<%= article.author %></a><br>
                                    <a class="read-more" href="articles/<%= article.slug %>">Read More</a>
                                    <% if(article.author.localeCompare(user.ID)==0){ %>
                                    <a href="articles/edit/<%= article.id %>"><button style=" margin-left: 50px; margin-top: 5px; width: 80px; height: 40px; margin-right: 10px; background-color: #5CC9DF; border-radius: 10px; border: none; color: #fff;">Edit</button></a>
                                    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button style="width: 80px; margin-top: 5px; width: 80px; height: 40px; background-color: #d34141; border-radius: 10px; border: none;">Delete</button>
                                </form>
                                    <% } %>
