<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/CSS/student.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    div.ex2 {

      width: 250px;
      height: 150px;
      overflow: auto;
    }
  </style>
</head>

<body>
  <div class="container">
    <br><br>
    <div class="title">Add Batch</div>
    <div class="content">
      <form action="/users/addbatch" method="POST">
        <div class="user-details">
          <div class="input-box">
            <span class="details">Batch ID</span>
            <input type="text" placeholder="Enter ID" name="batchId" required>
          </div>
          <div class="input-box">
            <span class="details">Batch Department</span>
            <select name="batchDepartment" id="department">
              <option value="CSE">Computer Science</option>
              <option value="ECE">Electronics & Communication</option>
              <option value="EEE">Electrical</option>
              <option value="ME">Mechanical</option>
              <option value="CE">Civil</option>
              <option value="AUE">Automobiles</option>
            </select>
          </div>

          <div class="input-box">
            <span class="details">Admission Year</span>
            <input type="text" placeholder="Enter Title" name="admYear" required>
          </div>

          <div class="input-box">
            <span class="details">Mentor</span>
            <input type="text" placeholder="enter Teacher Id" name="mentor" required>
          </div>
          <div class="input-box">
            <span class="details">HOD</span>
            <input type="text" placeholder="Enter Teacher ID" name="hod" required>
          </div>
          <div class="input-box">
            <span class="details">Current Semester</span>
            <select name="currentSem" id="department" style="width: 210px;">
              <option value="1">1st</option>
              <option value="2">2nd</option>
              <option value="3">3rd</option>
              <option value="4">4th</option>
              <option value="5">5th</option>
              <option value="6">6th</option>
              <option value="7">7th</option>
              <option value="8">8th</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Current Year</span>
            <select name="currentYear" id="department" style="width: 210px;">
              <option value="1">1st</option>
              <option value="2">2nd</option>
              <option value="3">3rd</option>
              <option value="4">4th</option>
            </select>
          </div>

          <div class="form-check">
            <span class="details" style="font-size: 20px;">Batch Subjects</span><br>

            <div class="ex2">
              <% for(var i=0;i<subj.length;i++){%>

                <input type="checkbox" class="form-check-input" name="subject" value="<%=subj[i].subjectId %>">
                <label class="form-check-label" for="subject">(<%=subj[i].subjectId %>) <%=subj[i].subjectName %> (
                      <%=subj[i].subjectType %>)</label><br>
                <%}%>
                

            </div>
          </div>
          <div class="form-check">
            <span class="details" style="font-size: 20px;">Batch Exams</span><br>

            <div class="ex2">
              <% for(var i=0;i<examList.length;i++){%>

                <input type="checkbox" class="form-check-input" name="exam" value="<%=examList[i].subjectId %>">
                <label class="form-check-label" for="exam">(<%=examList[i].examId %>) <%=examList[i].examTitle %> (Date :
                      <%=examList[i].examDate.getDate()+" / "+examList[i].examDate.getMonth()+" / "+examList[i].examDate.getFullYear() %>)</label><br>
                <%}%>
                

            </div>
          </div>


          <div class="button">
            <input type="submit">
          </div>

      </form>

      <div class="button">
        <a href="/users/welcome"><input type="submit" value="Back"></a>
      </div>
    </div>
  </div>



</body>

</html>