<% var id=[]; var name=[] %>
<% var date=[]; var description=[] %>
<% for(var i=0;i<event.length;i++){ %>

    <% id[i]=event[i].eventId %>
        <% name[i]=event[i].eventTitle %>
        <% date[i]=event[i].eventDate %>
        <% description[i]=event[i].eventDesp %>

            <% }%>


<script>
    const id ='<%= id %>'.split(',')
    const name ='<%= name %>'.split(',')
    const date ='<%= date %>'.split(',')
    const description ='<%= description %>'.split(',')
    var arr=[];
    for(var i=0;i<id.length;i++)
    {
        var test={
            id:id[i],
            name:name[i],
            date:date[i],
            description:description[i],
            type:"event"
        }
        arr[i]=test;
    }
    
    
</script>
              
